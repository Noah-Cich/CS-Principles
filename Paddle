---------------------------
int myX=mouseX;
int myY=350;

class Paddle
{
  public Paddle(int myX,int y)
  {
    fill(255);
    stroke(100);
    strokeWeight(2);
quad(myX-25,myY,myX+25,myY,myX+25,myY+10,myX-25,myY+10);
}}
